{
  "name": "portal_micro_base",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "example/*",
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "start": "umi dev",
    "build": "node scripts/build.js NO=1",
    "build:pkg": "lerna run build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "alias:ts": "node ./scripts/ts-paths"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^5.0.12",
    "@grfe/utils": "^0.3.25",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.2.28",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "umi": "^3.2.28",
    "yorkie": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^6.0.3"
  }
}
